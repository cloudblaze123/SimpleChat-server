{
  "compilerOptions": {
    "target": "es6",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "incremental": true,
    "module": "ES6",
    "allowArbitraryExtensions": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "strict": true,
  },
  "exclude": ["node_modules"],
}